{{! Maintainers - Kevin Corry}}
<div class="blockslider-controls-container">
    {{#if _blockSlider._tabs._isActive}}
        {{#each _blocks}}
            {{#if ../_blockSlider._tabs._useBlockTitle}}
                <button class="base blockslider-tab blockslider-text-tab blockslider-tab-{{attributes._id}} index-{{@index}}">
                    {{attributes.title}}
                </button>
            {{else}}
                <button class="base blockslider-tab blockslider-progress blockslider-tab-{{attributes._id}} index-{{@index}}"></button>
            {{/if}}
        {{/each}}
    {{/if}}

    {{#if _blockSlider._arrows._isActive}}
        <button class="base blockslider-controls blockslider-control-left blockslider-hidden">
            <div class="icon icon-controls-left"></div>
        </button>
        <button class="base blockslider-controls blockslider-control-right blockslider-hidden">
            <div class="icon icon-controls-right"></div>
        </button>
    {{/if}}
</div>
